$con = mysqli_connect($hostname, $username,"",$database)
or die("Unable to connect to MySQL");
echo "      Connected to SQL  <br>";

//Declaring Variables
$firstname = "";
$firstname = mysqli_real_escape_string($con,$_POST["firstname"]);


//execute the SQL query and return records
$sql= "DELETE FROM cipv6 WHERE `FirstName` = '$firstname'";
//$sql = "UPDATE `<dbname>` SET `FirstName`='',`LastName`='',`NickName`='' WHERE `FirstName` = '$firstname'"; (This can be used if you want to empty the cell value)


